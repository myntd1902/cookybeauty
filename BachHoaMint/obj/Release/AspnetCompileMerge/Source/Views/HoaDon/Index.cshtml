@model IEnumerable<BachHoaMint.Models.HoaDon>

<h2>Danh sách hóa đơn</h2>

<p>
    @Html.ActionLink("Thêm hóa đơn", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã hóa đơn
            @*@Html.DisplayNameFor(model => model.MaHD)*@
        </th>
        <th>
            Ngày lập
            @*@Html.DisplayNameFor(model => model.NgayLapHD)*@
        </th>
        <th>
            Ngày giao hàng
            @*@Html.DisplayNameFor(model => model.NgayGiaoHang)*@
        </th>
        <th>
            Khách hàng
            @*@Html.DisplayNameFor(model => model.KhachHang.TenKH)*@
        </th>
        <th>
            Mã nhân viên
            @*@Html.DisplayNameFor(model => model.Nhanvien.MaNV)*@
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="@Url.Action("Index", "CTHD", new {mahd = item.MaHD})">
                @Html.DisplayFor(modelItem => item.MaHD)
            </a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayLapHD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayGiaoHang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KhachHang.TenKH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nhanvien.MaNV)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaHD }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaHD }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaHD })
        </td>
    </tr>
}

</table>
