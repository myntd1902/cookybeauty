<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cooky Beauty</title>
    <link rel="shortcut icon" href="~/myicon.ico" type="image/x-icon" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="background-color: #9ae5e5">
        <div class="navbar navbar-fixed-top" style="background-color: #f2baba">
            <div class="container" style="background-color: lightpink">
                <div class="navbar-header">
                    @*<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>*@
                    <img src="~/logo/trangchu.png" alt="logo" style="width:50px;">
                    @Html.ActionLink("Trang chủ ☜", "Index", "Home", new { area = "" },
                                    new { @class = "navbar-header" })
                </div>
                <div class="navbar-inverse">
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                Loại sản phẩm
                                <span class="caret"></span>
                            </a>
                            @{ Html.RenderAction("Index", "Menu"); }
                        </li>

                        @if (Request.IsAuthenticated && User.IsInRole("Admin") || User.IsInRole("Master"))
                        {
                            <li>@Html.ActionLink("Sản phẩm", "Index", "SanPham")</li>
                            <li>@Html.ActionLink("Khách hàng", "Index", "KhachHang")</li>
                            <li>@Html.ActionLink("Hoá đơn", "Index", "HoaDon")</li>
                            if (User.IsInRole("Admin"))
                            {
                                <li>@Html.ActionLink("Nhân viên", "Index", "NhanVien")</li>
                                <li>@Html.ActionLink("Quản trị", "Index", "Admin")</li>
                            }
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Cooky Beauty</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
